# ==============================================
# APPLICATION CONFIGURATION
# ==============================================

# Environment (development, staging, production)
NODE_ENV=development

# Application Port
PORT=3001

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# ==============================================
# DATABASE CONFIGURATION
# ==============================================

# PostgreSQL Connection String
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=SCHEMA
DATABASE_URL="postgresql://postgres:password@localhost:5432/jfk_db?schema=public"

# ==============================================
# JWT AUTHENTICATION
# ==============================================

# JWT Secret Key (generate with: openssl rand -base64 32)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# JWT Token Expiration
JWT_EXPIRES_IN=7d

# JWT Refresh Token Expiration
JWT_REFRESH_EXPIRES_IN=30d

# ==============================================
# SECURITY
# ==============================================

# Rate Limiting (requests per time window)
THROTTLE_TTL=60000
THROTTLE_LIMIT=10

# CORS Allowed Origins (comma-separated)
# CORS Configuration
# Comma-separated list of allowed origins
# Examples:
# - Development: http://localhost:3000
# - Production: https://yourdomain.com,https://www.yourdomain.com
# - Multiple: http://localhost:3000,https://staging.yourdomain.com
CORS_ORIGIN=http://localhost:3000
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ==============================================
# EMAIL CONFIGURATION (SMTP)
# ==============================================

# SMTP Server
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false

# SMTP Authentication
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Email Sender
EMAIL_FROM=noreply@jfk-campaign.ci
EMAIL_FROM_NAME=JFKCampaign

# ==============================================
# FILE UPLOAD
# ==============================================

# Maximum file size (in bytes) - 5MB
MAX_FILE_SIZE=5242880

# Allowed file types
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf

# Upload directory
UPLOAD_DIR=./uploads

# ==============================================
# EXTERNAL SERVICES
# ==============================================

# Cloudinary (for image hosting - optional)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Sentry (error tracking - optional)
SENTRY_DSN=

# Google Analytics (optional)
GA_TRACKING_ID=

# ==============================================
# ADMIN CONFIGURATION
# ==============================================

# Default Admin Credentials (for seeding)
ADMIN_EMAIL=admin@jfk-campaign.ci
ADMIN_PASSWORD=ChangeThisPassword123!
ENABLE_USER_ADMIN_ENDPOINTS=false

# ==============================================
# API DOCUMENTATION
# ==============================================

# Swagger API Documentation
SWAGGER_ENABLED=true
SWAGGER_PATH=api/docs

# ==============================================
# LOGGING
# ==============================================

# Log Level (error, warn, info, debug, verbose)
LOG_LEVEL=info

# Log to File
LOG_TO_FILE=true
LOG_FILE_PATH=./logs

# ==============================================
# CACHE (Redis - optional)
# ==============================================

# Redis Connection
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Cache TTL (in seconds)
CACHE_TTL=3600

# ==============================================
# PAYMENT (for future donations - optional)
# ==============================================

# Stripe
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Mobile Money (Orange Money, MTN, Moov)
ORANGE_MONEY_API_KEY=
MTN_MOMO_API_KEY=
MOOV_MONEY_API_KEY=

# ==============================================
# SMS NOTIFICATIONS (optional)
# ==============================================

# Twilio
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# ==============================================
# SOCIAL MEDIA INTEGRATION (optional)
# ==============================================

# Facebook
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=

# Twitter/X
TWITTER_API_KEY=
TWITTER_API_SECRET=

# ==============================================
# MONITORING & ANALYTICS
# ==============================================

# Application Insights (optional)
APPINSIGHTS_INSTRUMENTATIONKEY=

# New Relic (optional)
NEW_RELIC_LICENSE_KEY=
NEW_RELIC_APP_NAME=JFK-API

# ==============================================
# DEVELOPMENT ONLY
# ==============================================

# Database Seeding
SEED_DATABASE=false

# Debug Mode
DEBUG=false

# Mock External Services
MOCK_SERVICES=false
